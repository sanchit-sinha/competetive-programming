{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile cpp file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "output"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run cpp file",
            "type": "shell",
            "command": "./output",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
        {
            "label": "Run cpp file",
            "type": "shell",
            "command": "./output",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
        
    ]
}